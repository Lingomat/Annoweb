{
    "name": "Aikuma NG",
    "short_name": "Aikuma NG",
    "description": "Aikuma-NG is an easy-to-use offline app to annotate/transcribe speech",
    "version": "0.943",
    "manifest_version": 2,
    "app": {
    "background": {
        "scripts": ["background.js"]
    }
    },
    "icons": { 
        "32": "icons/aikuma-32.png",
        "48": "icons/aikuma-48.png",
        "128": "icons/aikuma-128.png"
    },
    "file_handlers": {
        "audio": {
            "types": [
                "audio/mpeg",
                "audio/mp4",
                "audio/ogg",
                "audio/vnd.wav"
            ],
            "extensions": [
                "mp3",
                "mp4",
                "aac",
                "ogg",
                "wav"
            ]
        }
    },
    "permissions": [
        "unlimitedStorage",
        "audioCapture",
        "videoCapture",
        "storage",
        {"fileSystem": ["write", "retainEntries", "directory"]}
    ]
}
