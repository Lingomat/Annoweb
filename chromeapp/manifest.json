{
    "name": "Annoweb",
    "description": "My first Chrome App.",
    "version": "0.1",
    "manifest_version": 2,
    "default_locale": "en",
    "app": {
    "background": {
        "scripts": ["background.js"]
    }
    },
    "icons": { 
        "16": "icons/annoweb-16.png", 
        "32": "icons/annoweb-32.png", 
        "128": "icons/annoweb-128.png" 
    },
    "file_handlers": {
        "audio": {
            "types": [
                "audio/mpeg",
                "audio/vnd.wav"
            ],
            "extensions": [
                "mp3",
                "wav"
            ]
        }
    },
    "permissions": [
        "unlimitedStorage",
        "fileSystem"
    ]
}
