{
    "name": "Aikuma NG",
    "short_name": "Aikuma NG",
    "description": "Let's record our treasure language! An easy-to-use offline app for speech annotation and captions",
    "version": "0.903",
    "manifest_version": 2,
    "app": {
    "background": {
        "scripts": ["background.js"]
    }
    },
    "icons": { 
        "32": "icons/aikuma-32.png",
        "128": "icons/aikuma-128.png"
    },
    "file_handlers": {
        "audio": {
            "types": [
                "audio/mpeg",
                "audio/vnd.wav"
            ],
            "extensions": [
                "mp3",
                "wav"
            ]
        }
    },
    "permissions": [
        "unlimitedStorage",
        "audioCapture",
        "storage",
        {"fileSystem": ["write", "retainEntries", "directory"]}
    ]
}
